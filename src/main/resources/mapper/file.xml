<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.jcloud.file.fileMapper">
    <select id="insertFileUpload"  parameterType="com.project.jcloud.file.fileDto">
        INSERT INTO ljw_data
        VALUES(
              #{fileSeq}
              , #{fileOriName}
              , #{fileNewName}
              , #{fileDir}
              , #{fileType}
              , #{fileSize}
              , now()
               )
    </select>

    <select id="selectFileList" resultType="com.project.jcloud.file.fileDto">
        SELECT *
        FROM ljw_data
        ORDER BY upload_date
    </select>

    <select id="updateFileCnt" parameterType="integer ">
        UPDATE ljw_data
        SET upload_file_cnt = #{cnt}
    </select>
</mapper>
